<%-include header %>

<!-- Topic title -->

<section class="wrapper">
    <div class="inner">
        <div class="row">
            <header class="align-center 12u 12u(large)">
                <h2> class: <%= theClass.className %><br/></h2>
                <h3> topic: <%= topic.topicName %> </h3>
            </header>
        </div>

        <div class="row">
            <a href="/class?<%= theClass._id%>">
                <h2>Class Link</h2>
            </a>
        </div>
    </div>
</section>

<hr>

<!-- topic content -->
<section id="topic-section" class="wrapper">

    <div class="inner">
        <div class="row">
            <div id="topic-writer" class="2u$ 12u(small)">
                <a href=#>
                    <img src="../public/images/pic05.jpg" width="120px" alt="USER A" />
                    <h2><%= topic.author%></h2>
                </a>
                <i class="icon fa-angellist"></i>
                <i class="icon fa-angellist"></i>
                <i class="icon fa-angellist"></i>
                <i class="icon fa-angellist"></i>
                <i class="icon fa-angellist"></i>
            </div>

            <div id="topic-content" class="12u$ 12u$(small)">
                <div class="row">
                    <div class="9u 12u$(medium)">
                        <h3><%= topic.topicName%></h3>
                    </div>
                    <div class="3u 12u$(small)">
                        <a href="#">
                            <i class="icon fa-caret-up"></i>
                        </a>
                        <h4><%= topic.viewer %></h4>
                        <a href="#">
                            <i class="icon fa-caret-down"></i>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <h5> posted on </h5>
                    <h5> <%= topic.postTime%></h5>
                </div>

                <hr>

                <div>
                    <p><%= topic.article%></p>
                </div>
            </div>
        </div>
    </div>

</section>

<hr>

<section id="topic-comments" class="wrapper">
    <div class="inner">

        <div id="topic-comment-sort" class="row">
            <div class="2u$ 12u$(small)">
                <h3>Comments(50)</h3>
            </div>
            <div id="topic-comments-sort-by" class="select-wrapper 2u$ 12u$(small)">
                <select name="category" class="align-right">
                    <option value="">- Hotness -</option>
                    <option value="1">Newest</option>
                    <option value="1">Oldest</option>
                </select>
            </div>
        </div>


        <div class="row uniform">
            <% topic.comments.forEach(function(comment){%>
            <div class="1u 12u$(small)">
                <img src="../public/images/pic06.jpg" width="50px" alt="USER B" />
                <a href="#">
                    <h4> <%= comment.writer %></h4>
                    <h6> <%= comment.writeTime %></h6>
                </a>
            </div>
            <div class="11u$ 12u$(small)">
                <div class="box">
                    <p><%= comment.content %></p>
                </div>
            </div>
            <%})%>
        </div>

        <form method="post">
            <header>
                <h3>Write your opinion</h3>
            </header>
            <textarea name="comment" placeholder="Write your comment here" rows="3"></textarea>
            <ul class="actions">
                <li><input type="submit" value="send comment" class="special"/></li>
            </ul>
        </form>

    </div>
</section>

<%- include footer %>