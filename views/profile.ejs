<%-include header %>

<!-- Profile Banner -->
<section id="profile-id" class="wrapper style2">

    <div id="photo">
        <img src="../avatars/<%=user.avatar%>" width="100px" alt="user's avatar" />
    </div>

    <div id="name">
        <h2><%= user.username %></h2>
    </div>

</section>

<!-- Enrolled classes -->
<section id="profile-enrolled-class" class="wrapper style1">
    <div class="inner">
        <header>
            <h3> Classes you Enrolled</h3>
        </header>
        <div class="row">
            <% user.enrolledClass.forEach(function(eachClass){%>
                <div class="4u 12u$(medium) box">
                    <ul class="alt">
                        <li>
                            <h3>Class Name: <%= eachClass.className %></h3>
                        </li>
                        <% eachClass.lessons.forEach(function(lesson){%>
                        <li>
                            <h4> <a href="/class/detail/lesson?id=<%= eachClass._id%>&lessonId=<%= lesson._id%>">
                                Lesson : <%= lesson.lessonName%></a>
                            </h4>

                            description: <%= lesson.description %>
                        </li>
                        <%})%>
                    </ul>
                </div>
            <%})%>
            <div id="add-new-subject" class="3u$ 12u$(medium)">
                <p> Find more classes that you are interested </p>
                <a href="/#subject-field" class="button special small">+ Add more classes</a>
            </div>
        </div>
    </div>
</section>

<!-- Created classes -->
<section id="profile-uploaded-class" class="wrapper style3">
    <div class="inner">
        <header>
            <h3> The Classes you created</h3>
        </header>
        <div class="row">
            <%- include('class-content', { classes: createdClasses }) %>
            <div id="add-new-subject" class="3u$ 12u$(medium)">
                <p> Share your Knowledge and grow with people those need helps</p>
                <a href="/profile/create-class" class="button special small">+ Create more classes</a>
            </div>
        </div>
    </div>
</section>

<!-- your discussion-->
<section id="profile-your-discussion" class="wrapper style1">
    <div class="inner">
        <header>
            <h1> Your discussion topics</h1>
        </header>
        <div class="table-wrapper">
            <table>
                <thead>
                <tr>
                    <th>Topic Name</th>
                    <th>Time</th>
                    <th>Views</th>
                </tr>
                </thead>
                <tbody>
                <% topics.forEach(function(topic){%>
                <tr>
                    <td><a href="/topic/detail/article?topicId=<%= topic._id%>">
                            <%= topic.topicName%>
                        </a>
                    </td>
                    <td><%= topic.postTime%></td>
                    <td><%= topic.viewer%></td>
                </tr>
                <%})%>
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="3"></td>
                    <td>No more content</td>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>

<%- include footer %>