<%-include header %>

<!-- Profile Banner -->
<section class="wrapper style2">
    <div class="inner">
        <div class="row">
            <div class="2u 12u$(xsmall)">
                <img src="../avatars/<%=user.avatar%>" width="120px" alt="user's avatar" />
            </div>
            <div class="3u 12u$(xsmall)">
                <h2><%= user.username %></h2>
                <p><%= user.bio%></p>
            </div>
            <div class="7u 12u$(xsmall)">
                <ul class="actions align-right">
                    <li class="editAvatar button small">Pick your avatar
                        <div id="editAvatar"></div>
                    </li>
                    <li class="editBio button small">Edit your bio
                        <div id="editBio"></div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>



<!-- Enrolled classes -->
<section class="wrapper style1 classPage">
    <div class="inner">
        <header class="align-center"><h2> Classes you Enrolled</h2></header>
        <header class="align-center"><h2>----</h2></header>
        <hr>
        <div class="row">
            <% user.enrolledClass.forEach(function(eachClass){%>
                <div class="3u 12u$(medium) box">
                    <ul class="alt">
                        <li><h5>Class</h5></li>
                        <li>
                            <h4><%= eachClass.className %></h4>
                        </li>
                        <% eachClass.lessons.forEach(function(lesson){%>
                            <li><h6>Lesson</h6></li>
                            <li>
                                <h5> <a href="/class/detail/lesson?id=<%= eachClass._id%>&lessonId=<%= lesson._id%>">
                                    <%= lesson.lessonName%></a>
                                </h5>
                            </li>
                            <li><p><%= lesson.description %></p></li>
                        <%})%>
                        <li>
                            <a onclick="toggle_visibility('popupBoxOnePosition');" class="button small">- Withdraw this class</a>
                        </li>
                        <%- include('pop-block', { id: eachClass._id, word: "withdraw", root:"profile"}) %>
                    </ul>
                </div>
            <%})%>
            <div id="add-new-subject" class="3u$ 12u$(medium)">
                <p> Find more classes that you are interested </p>
                <a href="/#subject-field" class="button special small">+ Add more classes</a>
            </div>
        </div>
    </div>
</section>

<!-- Created classes -->
<section class="wrapper style2 classPageAnti">
    <div class="inner">
        <header class="align-center"><h2>Classes you Created</h2></header>
        <header class="align-center"><h2>----</h2></header>
        <hr>
        <div class="row">
            <%- include('class-content', { classes: createdClasses }) %>
            <div class="3u$ 12u$(medium)">
                <p> Share your Knowledge and grow with people those need helps</p>
                <a href="/profile/create-class" class="button special small">+ Create more classes</a>
            </div>
        </div>
    </div>
</section>


<!-- your discussion-->
<section id="profile-your-discussion" class="wrapper style1">
    <div class="inner">
        <header class="align-center"><h2>Your topics</h2></header>
        <header class="align-center"><h2>----</h2></header>
    </div>
    <div class="container">

    
        <div class="table-wrapper">
            <table>
                <thead>
                <tr>
                    <th class="align-center">Topic Name</th>
                    <th class="align-center">Time</th>
                    <th class="align-center">Views</th>
                </tr>
                </thead>

                <tbody>
                <% topics.forEach(function(topic){%>
                <tr>
                    <td><a href="/topic/detail/article?topicId=<%= topic._id%>">
                            <%= topic.topicName%>
                        </a>
                    </td>
                    <td><%= topic.postTime%></td>
                    <td><%= topic.viewer%></td>
                </tr>
                <%})%>
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="3"></td>
                    <td>No more content</td>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>
<script src="./javascripts/ajax.js"></script>


<%- include footer %>