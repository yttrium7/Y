<%- include header %>

<!-- All topics -->
<section class="wrapper style3">
    <div class="3u 12u$(small) align-center">
        <h3>All topics</h3>
    </div>
</section>


<hr>

<!-- Topics Lists -->
<section class="wrapper style1">

    <hr>

    <div class="inner">
        <% classes.forEach(function(eachClass){%>
            <% eachClass.topics.forEach(function(topic){%>
            <div class="row box">
                <div class="2u 12u(xsmall)">
                    <a href="/user/<%= topic.author%>">
                    <% users.forEach(function(user){ %>
                        <% if(user.username == topic.author){ %>
                            <img src="../avatars/<%= user.avatar%>" width="50px" alt="user's avatar"/>
                        <% }%>
                    <%})%>
                    </a>
                </div>

                <div class="6u 12u(xsmall)">
                    <h5><a href="/topic/detail/article?topicId=<%= topic._id%>">
                        <%= topic.topicName%>
                        </a>
                    </h5>
                </div>

                <div class="2u 12u(xsmall)">
                    <h6><%= topic.postTime %></h6>
                </div>

                <div>
                    <i class="icon fa-comment"></i>
                    <%= topic.viewer %>
                </div>
            </div>
        <hr>
        <%})%>
        <%})%>
    </div>

</section>

<%- include footer %>