<%- include header %>

<!-- create your topic -->

<section class="wrapper style1">
    <div class="inner">

        <h3 class="align-center"> Create your own topic </h3>
        <h2 class="align-center">

            class:
            <%= theClass.className%>
        </h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row uniform 50%">
                <div class="6u 12u$(xsmall)">
                    <input type="text" name="topicName" placeholder="Your topic title" required/>
                </div>
                <div class="12u$">
                    <textarea name="article" placeholder="Enter your topic content" rows="6"></textarea>
                </div>

                <div class="6u 12u$(xsmall)">
                    <label for="name"> Upload your topic associated image </label>
                    <input type="file" name="postImg" />
                </div>

                <input type="hidden" name="viewer" value=0 />

                <div class="12u$">
                    <ul class="actions">
                        <li><input type="submit" value="New topic create" class="special" /></li>
                    </ul>
                </div>
            </div>
        </form>
    </div>
</section>

<%- include footer %>