<%- include header %>

<!-- lesson header -->
<section id="discussion-title">
    <div class="3u 12u$(small) align-center">
        <h2>Class : </h2>
        <h3><%= theClass.className%></h3>
    </div>
</section>

<!-- lesson file showing -->
<section id="video-play" class="wrapper">
    <div class="row">
        <img src='/lessonfiles/<%=lesson.content%>' width="500"/>   
    </div>
</section>

<!-- lesson name and description -->
<section id="video-title" class="wrapper">
    <div class="inner">
        <div class="row">
            <header class="align-center 12u 12u(large)">
                <h2> <%= lesson.lessonName%><br/></h2>
            </header>
            <div class="box">
                <p><%= lesson.description%></p>
            </div>
        </div>
    </div>
</section>

<!-- lesson hyperlink -->
<section class="wrapper">
    <div class="inner">
        <div class="row">
            <div class="6u 12u$(small)">
                <a href="/topic/detail?id=<%=classId%>" class="button special small fit">Join related discussion</a>
            </div>
            <div class="6u 12u$(small)">
                <a href="/#subject-field" class="button special small fit">View Class List</a>
            </div>
        </div>
    </div>
</section>

<!-- lesson edit -->
<% if (producer == user.username){%>
    <section>
        <div>
            <ul class="actions">
                <li class="button small"> <a href="edit?id=<%= classId%>&lessonId=<%= lesson._id%>">Edit</a></li>
                <li class="button small"> <a onclick="toggle_visibility('popupBoxOnePosition');">Delete</a></li>
            </ul>
        </div>
    </section>
<%}%>

<%- include('pop-block',{ id: lesson._id, word:"delete", root:"class/detail" }) %>

<%- include footer %>