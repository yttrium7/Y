<% if(createdClasses){ %>

<div class="row">
    <% createdClasses.forEach(function(eachClass){%>
    <div class="4u 12u$(medium) box">
        <ul class="alt">
            <li>
                <h3>Class Name: <%= eachClass.className %></h3>
            </li>


            <% eachClass.lessons.forEach(function(lesson){%>
            <li>
                <h4> <a href="/class/<%= eachClass.className%>/<%= lesson.lessonName%>?lessonId=<%= lesson._id%>&classId=<%= eachClass._id%>&producer=<%= eachClass.producer%>">
                        Lesson : <%= lesson.lessonName%></a>
                </h4>
                description: <%= lesson.description %>
            </li>
            <%})%>

            <li>
                <a href="/profile/upload-lesson?id=<%= eachClass._id%>" class="button small">+ Upload your lessons</a>
            </li>
        </ul>
    </div>
    <%})%>
    <div id="add-new-subject" class="3u$ 12u$(medium)">
        <a href="/profile/create-class" class="button special small">+ Add more classes</a>
    </div>
</div>

<%}%>

