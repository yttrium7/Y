<%- include header %>

<!-- create your class -->

<section id="create-new-class" class="wrapper style1">
    <div class="inner">
        <h3 class="align-center"> Create your own class </h3>

        <form method="post" enctype="multipart/form-data">

            <div class="row uniform 50%">

                <!-- class name -->
                <div class="6u 12u$(xsmall)">
                    <label>class name</label>
                    <input type="text" name="className" placeholder="Enter Your class name" required/>
                </div>

                <!-- class description -->
                <div class="12u$">
                    <label>class description</label>
                    <textarea name="classDescription" placeholder="Enter your class description" rows="6" required></textarea>
                </div>

                <!-- class tag -->
                <div class="6u 12u$(xsmall)">
                    <label>Category</label>
                    <select name="tag">
                        <option value="Life Skill">Life Skill</option>
                        <option value="Arts and Music">Arts and Music</option>
                        <option value="Academic">Academic</option>
                        <option value="Handcraft">Handcraft</option>
                    </select>
                </div>

                <!-- enroll number -->
                <input type="hidden" name="enrollNumber" value=0 />

                <!-- submit -->
                <div class="12u$ align-center">
                    <ul class="actions align-center">
                        <li><input type="submit" value="New ClassModel create" class="special"/></li>
                    </ul>
                </div>
                
            </div>
        </form>
    </div>
</section>

<%- include footer %>